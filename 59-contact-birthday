public Boolean isBirthday(Contact c) {

Date todayDate = System.today();
Integer todate = todayDate.day();
Integer tomon = todayDate.month();

Integer dayofBirth = c.Birthday.day();
Integer monthofBirth  = c.Birthday.month();


if(todate == dayofBirth && tomon == monthofBirth){
    return true;
}
else {
    return false;
}

}